pipeline {
    agent any
    options {
        timestamps()
        disableConcurrentBuilds()
        buildDiscarder logRotator(numToKeepStr: '5')
    }
    stages {
        stage('Deploy') {
            steps {
                script {
                    def exitCode = sh returnStatus: true, script: """
                    mvn deploy -DskipTests -Drevision=${VERSION}
                    """
                    if (exitCode > 0) {
                        error("Deployment failed")
                    }
                }
            }
        }
    }
}
